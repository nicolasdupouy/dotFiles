# Windows disposition
# -- Window title alignment
title_align center
# -- Inner gaps: space between two adjacent windows (or split containers).
gaps inner 20
# -- Outer gaps: space along the screen edges.
gaps outer -10

# Colors
set $dracula-blue #6272A4
set $orange #FF8000
set $purple #A020F0

